.wrapper
  .contents
    .contents__all
      %h2.contents__all__title
        みんなの投稿
      .contents__inner
        - @books.each do |book|
          = link_to book_path(book.id) do
            .content
              .content__image
                = image_tag book.image.url, alt: '', height: '150', width: '100', class: ''
              .content__in
                .content__in__title
                  = book.title
                .content__in__author
                  = "著者: #{book.author}"
                .content__in__publisher
                  = "出版社: #{book.publisher}"
                .content__in__user-name
                  = "投稿者: #{book.user.nickname}"
                .content__in__user-image
                  - if book.user.image?
                    = link_to bookcase_user_path(book.user.id) do
                      = image_tag book.user.image.url, alt: '', height: '68', width: '68', class: 'user-icon'

