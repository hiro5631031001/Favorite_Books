.header
  .container
    .container__top
      .container__top__logo
        = link_to " FAVORITE BOOKS",root_path
      .search-box
        = form_with url: new_book_path, method: :get, local: true do |f|
          .form-group
            = f.text_field :title, class: "form-control"
            = f.submit '本の題名を検索', class: "form-control btn btn-success"

    .container__bottom
      %ul.container__bottom__list
        %li.container__bottom__list__all
          = link_to "みんなの投稿"
        %li.container__bottom__list__mypage
          = link_to "マイページ"
        %li.container__bottom__list__want
          = link_to "読みたい本"

      %ul.container__bottom__user-box
        - if user_signed_in?
          = link_to "ログアウト",destroy_user_session_path, method: :delete, class: "" 
        - else
          %li.container__bottom__user-box__signup
            = link_to "新規登録", new_user_registration_path, class: "" 
          %li.container__bottom__user-box__login
            = link_to "ログイン", new_user_session_path, class: ""