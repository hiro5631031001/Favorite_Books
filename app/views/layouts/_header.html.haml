.header
  .container
    .container__top
      .container__top__logo
        = link_to " FAVORITE BOOKS",root_path
      .search-box
        = form_with url: books_search_path, method: :get, local: true do |f|
          .form-group
            = f.text_field :keyword, class: "form-control"
            = f.submit '本の題名を検索', class: "form-control btn btn-success"

    .container__bottom
      %ul.container__bottom__list
        %li.container__bottom__list__all
          = link_to "みんなの投稿"
        %li.container__bottom__list__mypage
          = link_to "マイページ"
        %li.container__bottom__list__want
          = link_to "読みたい本"

      %ul.container__bottom__user-box
        %li.container__bottom__user-box__signup
          = link_to "新規登録", "#" 
        %li.container__bottom__user-box__login
          = link_to "ログイン", "#"